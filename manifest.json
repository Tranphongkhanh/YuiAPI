{
    "manifest_version": 2,
    "name": "YuiAPI",
    "version": "0.0.2",
    "description":"HTTP api test client, Auto test, API document",
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "browser_action": {
        "default_title": "YuiAPI",
        "default_icon": "images/logo48.png"
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "16": "images/logo16.png",
        "48": "images/logo48.png",
        "128": "images/logo128.png"
    }
}