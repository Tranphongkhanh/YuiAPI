{
    "manifest_version": 2,
    "name": "YuiAPI - A REST Client, Api Test and document",
    "short_name": "YuiAPI",
    "version": "0.10.0",
    "description":"REST Client, Api Test and document",
    "homepage_url": "https://www.yuiapi.com",
    "author":"Yuiitsu",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/lib/jquery-1.11.0.min.js",
            "scripts/app.js",
            "scripts/background.js"
        ]
    },
    "content_scripts": [{
        "matches": [
            "http://www.yuiapi.com/*",
            "https://www.yuiapi.com/*"
        ],
        "js": [
            "scripts/lib/jquery-1.11.0.min.js",
            "scripts/app.js",
            "scripts/module/content/module.js"
        ]
    }],
    "browser_action": {
        "default_title": "YuiAPI REST Client Test Document",
        "default_icon": "images/logo48.png"
    },
    "permissions": [
        "tabs",
        "cookies",
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "16": "images/logo16.png",
        "48": "images/logo48.png",
        "128": "images/logo128.png"
    }
}